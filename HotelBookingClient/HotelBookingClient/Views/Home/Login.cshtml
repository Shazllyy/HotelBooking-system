@{
    ViewData["Title"] = "Log In";
}

@section Styles{
<link href="~/css/login.css" rel="stylesheet" type="text/css" asp-append-version="true">
}

<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form asp-action="Checklogin"  asp-controller="Home">                                                                
             <div class="form-outline mb-4">
                  @if (ViewBag.falseData != null)
                    {
                         @if (ViewBag.falseData)
                    {
                        <span class="text-danger col-2">Wrong username or password</span>
                        
                    }
                    }
            <input  asp-for="userName" value="admin" placeholder="admin" id="form3Example3" class="form-control form-control-lg"
              placeholder="Enter username" />
            <label class="form-label" for="form3Example3">username</label>
             <span asp-validation-for="userName" class="text-danger"></span>
          </div>

        
          <div class="form-outline mb-3">
            <input type="password"asp-for="userPassword" placeholder="admin" value="admin"  id="form3Example4" class="form-control form-control-lg"
              placeholder="Enter password" />
            <label class="form-label" for="form3Example4">Password</label>
            <span asp-validation-for="userPassword" class="text-danger"></span>
          </div>
         

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>           
          </div>

        </form>
      </div>
    </div>
  </div>
  <div
    class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary">
    <!-- Copyright -->
    <div class="text-white mb-3 mb-md-0">
      Copyright © 2022. All rights reserved.
    </div>
    <!-- Copyright -->

    <!-- Right -->
    <div>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-facebook-f"></i>
      </a>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-twitter"></i>
      </a>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-google"></i>
      </a>
      <a href="#!" class="text-white">
        <i class="fab fa-linkedin-in"></i>
      </a>
    </div>
    <!-- Right -->
  </div>
</section>
